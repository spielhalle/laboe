{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es6",
        "module": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        // Disallow features that require cross-file information for emit.
        "isolatedModules": true,
        // Import non-ES modules as default imports.
        "esModuleInterop": true
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "baseUrl": "./src"
}
